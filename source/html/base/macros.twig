{% macro svg(id, width, height) %}
  <svg width="{{ width }}" height="{{ height }}">
    <use href="#{{ id }}"></use>
  </svg>
{% endmacro %}

{% macro logo() %}
  <div class="logo">
    <a href="index.html" aria-label="логотип">
      {% import _self as macro %}
      {{ macro.svg('logo', 176, 47) }}
    </a>
  </div>
{% endmacro %}


