{% extends "../base/layout.twig" %}
{% set title = 'modal' %}

{% block header %}
{% endblock %}

{% block main %}

  <div class="modal">
    <section class="modal__wrap">
      <h2>Регистрация</h2>
      <form class="modal-form modal-form--register" method="post" action="https://jsonplaceholder.typicode.com/posts" autocomplete="on">
        <label class="modal-form__label-wrap">
          <input type="text" name="name" placeholder="Имя">
        </label>
        <label class="modal-form__label-wrap">
          <input type="text" name="email" placeholder="Email">
        </label>
        <label class="modal-form__label-check">
          <input type="checkbox" name="">
          <span>Я согласен на обработку персональных данных</span>
        </label>
      <button class="btn btn--invert modal-form__btn" type="submit">Зарегистрироваться</button>
      </form>
      <button class="btn btn--invert modal__close" aria-label="закрыть окно" type="button">
        {{ macro.svg('close', 10, 10) }}
      </button>
    </section>
  </div>

{% endblock %}


{% block footer %}
{% endblock %}
